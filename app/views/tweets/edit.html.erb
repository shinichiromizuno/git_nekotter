    <div class="contents">
      <h2>投稿を編集する</h2>
      <%= form_tag('/tweets', method: :post, class: "clearfix") do %>
        <%= image_tag 'cat1.png' %>
        <div class="input-box">
          <textarea rows="4" cols="40"><%= @tweet.text %></textarea>
        </div>
        <div class="button-box">
          <input type="submit" class="submit-button">
        </div>
      <% end %>
    </div>
